rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Providers collection
    match /providers/{providerId} {
      
      // âœ… Anyone can read providers (for map + sidebar)
      allow read: if true;

      // âœ… Logged-in users can add providers
      allow create: if request.auth != null;

      // âœ… Only admins can update/delete providers
      allow update, delete: if request.auth != null
        && request.auth.uid in [
          "YOUR_ADMIN_UID_1",  // ðŸ”‘ Replace with your UID
          "YOUR_ADMIN_UID_2"   // Optional
        ];
    }
  }
}
